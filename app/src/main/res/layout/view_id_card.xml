<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="20dp">
        <!--正面-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.virgo.financeloan.ui.view.UploadPicView
                android:id="@+id/id_front_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                tools:src="@mipmap/icon_add_pic" />

            <ImageView
                android:id="@+id/id_front_img_clear"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@id/id_front_img"
                android:layout_alignTop="@id/id_front_img"
                android:background="@mipmap/delet_pic"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/front_pic"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="20dp">
        <!--反面-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.virgo.financeloan.ui.view.UploadPicView
                android:id="@+id/id_side_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                tools:src="@mipmap/icon_add_pic" />
            <ImageView
                android:id="@+id/id_side_img_clear"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@id/id_side_img"
                android:layout_alignTop="@id/id_side_img"
                android:background="@mipmap/delet_pic"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/side_pic"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>
</LinearLayout>
