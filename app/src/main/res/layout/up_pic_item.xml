<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_line"
        android:layout_width="10dp"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true" />


    <com.virgo.financeloan.ui.view.UploadPicView
        android:id="@+id/maintain_pic_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_line1"
        android:layout_toRightOf="@id/view_line"
        android:scaleType="centerInside"
        tools:src="@mipmap/icon_add_pic" />

    <TextView
        android:id="@+id/tv_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_line1"
        android:layout_toRightOf="@id/view_line"
        android:textColor="@color/white"
        android:text="已上传"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/bg_already_up" />


    <ImageView
        android:id="@+id/maintain_pic_clear_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@id/maintain_pic_img"
        android:layout_alignTop="@id/maintain_pic_img"
        android:background="@mipmap/delet_pic" />

</RelativeLayout>
