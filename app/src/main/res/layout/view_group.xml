<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root_rl"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/group_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16"
            tools:text="本人身份证" />

        <ImageView
            android:id="@+id/group_name_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/group_name_tv"
            android:src="@mipmap/icon_red_dot"
            android:visibility="gone" />

        <TextView
            android:id="@+id/group_up_tv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/btn_up"
            android:visibility="gone"
            android:textSize="@dimen/font_size_15" />

        <ImageView
            android:id="@+id/group_arrow_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_up_dow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/up_pic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg"/>
</LinearLayout>