<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- looping viewpager -->
    <declare-styleable name="CustomTitleView">
        <!-- Style of the circle indicator. -->
        <attr name="default_title" format="reference" />
        <attr name="btn_text" format="string" />
        <attr name="default_color" format="color" />
        <attr name="default_size" format="dimension" />
        <attr name="click_loading" format="boolean" />
    </declare-styleable>

    <!--密码输入框相关-->
    <declare-styleable name="gridPasswordView">

        <attr name="gpvTextColor" format="color|reference" />
        <attr name="gpvTextSize" format="dimension" />

        <attr name="gpvLineColor" format="color" />
        <attr name="gpvGridColor" format="color" />
        <attr name="gpvLineWidth" format="dimension" />

        <attr name="gpvPasswordLength" format="integer" />
        <attr name="gpvPasswordTransformation" format="string" />

        <attr name="gpvPasswordType" format="enum">
            <enum name="numberPassword" value="0" />
            <enum name="textPassword" value="1" />
            <enum name="textVisiblePassword" value="2" />
            <enum name="textWebPassword" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="StepsView">
        <attr name="numOfSteps" format="integer" />
        <attr name="completePosition" format="integer" />
        <attr name="labels" format="reference" />
        <attr name="barColor" format="reference" />
        <attr name="progressColor" format="reference" />
        <attr name="labelColor" format="reference" />
        <attr name="progressTextColor" format="reference" />
        <attr name="hideProgressText" format="boolean" />
        <attr name="labelSize" format="float" />
        <attr name="progressMargin" format="float" />
        <attr name="circleRadius" format="float" />
        <attr name="progressStrokeWidth" format="float" />
    </declare-styleable>
</resources>
